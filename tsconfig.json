{
  "extends": "@vue/tsconfig",
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.vue"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./dist"
  }
}